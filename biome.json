{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "includes": ["**", "!**/*.generated.tsx"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "includes": [
      "**",
      "!**/tsconfig.json",
      "!**/.next/**",
      "!**/dist/**",
      "!**/.nx/cache/**",
      "!**/website/src/graphql/**",
      "!**/.nx/workspace-data/project-graph.json"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/tsconfig.json",
      "!**/.next/**",
      "!**/dist/**",
      "!**/.nx/cache/**",
      "!**/website/src/graphql/**",
      "!**/.nx/workspace-data/project-graph.json"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "noInferrableTypes": "error",
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error"
      }
    }
  }
}
